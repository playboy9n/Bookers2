
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', user: @user, book: @book %>
		</div>
		<div class="col-lg-9">
			<h2>Users</h2>
			<table class="table">
				<tr>
					<th>image</th>
					<th>name</th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user,
					:profile_image, :fill, 35, 35,
					format: 'jpeg', fallback: "no_image.jpg",
					size: "35x35" %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
				<% end %>
			</table>
		</div>
</div>

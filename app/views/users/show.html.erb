<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<div class="page"></div>
			<%= render 'books/list', user: @user, book: @book %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
					<% @books.each do |b| %>
				<tr>
					<td><%= attachment_image_tag b.user,
					:profile_image, :fill, 35, 35,
					format: 'jpeg', fallback: "no_image.jpg",
					size: '35x35' %></td>
					<td><%=link_to b.title, book_path(b.id) %></td>
					<td><%= b.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
</div>
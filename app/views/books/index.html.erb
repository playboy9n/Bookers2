<% if @book.errors.any? %>
<div class="aleart alert-warning">
	<ul>
		<li><%= "#{@book.errors.count}errors prohibited this user  from begin saved" %></li>
		<% @book.errors.full_messages.each do |message| %>
		<li><% message %></li>
		<% end %>
	</ul>
</div>
<% end %>



<div class="container">
	<div class="row">
		<div class="col-lg-3">
		<%= render 'books/list', book: @book, user: @user %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>
				<table class="table">
					<tr>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
	            <% @books.each do |book| %>
							<td><%= attachment_image_tag book.user,
							:profile_image, :fill, 35, 35,
							format: 'jpeg', fallback: "no_image.jpg",
							size: "35x35"%></td>
							<h2 class="book-title"><%= @book.title %></h2>
							<td><%= link_to book.title, book_path(book.id) %></td>

							<td><%= book.body %></td>
						</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>